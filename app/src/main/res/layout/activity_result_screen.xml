<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nvt.glucosemonitoring.ResultScreen"
    android:background="#ff34d8ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Glucose Level Is:"
        android:id="@+id/readTitle"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="42dp"
        android:textAlignment="textEnd"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mg/dl"
        android:id="@+id/units"
        android:textSize="32dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/readTitle"
        android:layout_alignEnd="@+id/readTitle"
        android:layout_marginRight="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/result"
        android:textSize="32dp"
        android:layout_alignTop="@+id/units"
        android:layout_toLeftOf="@+id/units"
        android:layout_toStartOf="@+id/units"
        android:layout_marginRight="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Again!!"
        android:id="@+id/redo"
        android:textSize="42dp"
        android:background="#ffff9195"
        android:layout_below="@+id/units"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:onClick="onButtonPress" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/readTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="201dp"></FrameLayout>

</RelativeLayout>
